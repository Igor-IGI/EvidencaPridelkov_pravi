<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvidencaPridelkov.View.LinkView"
             Title="LinkView">
    <VerticalStackLayout>
        <Button 
                x:Name="btn_product"                
                Text="Pridelki" BackgroundColor="#006385" 
                TextColor="White" 
                VerticalOptions="End"
                Command="{Binding ProductBtn}"/>
        <Button 
                x:Name="btn_order"                
                Text="Naročila" BackgroundColor="#006385" 
                TextColor="White" 
                VerticalOptions="End"
                Command="{Binding OrderBtn}"/>
        <Button 
                x:Name="btn_notes"                
                Text="Beležke" BackgroundColor="#006385" 
                TextColor="White" 
                VerticalOptions="End"
                Command="{Binding NotesBtn}"/>
    </VerticalStackLayout>
</ContentPage>